{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "src/typings.d.ts"],
    "lib": ["es2018", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@environments/*": ["environments/*"],
      "@services/*": ["app/services/*"],
      "@shared/*": ["app/shared/*"],
      "@utils/*": ["app/utils/*"]
    }
  }
}
